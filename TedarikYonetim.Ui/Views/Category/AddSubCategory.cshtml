@model TedarikYonetim.Model.Category

@{
    ViewData["Title"] = "Alt Kategori Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var kategori = ViewBag.Categories;
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Kategori</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Alt Kategori Ekle</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Kategori Ekle</h3>
                        </div><br />
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action="AddSubCategory">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            @*<div class="form-group">
                                <label class="control-label">Üst Kategori</label>
                                <select asp-for="UpperCategoryId" class="form-control" asp-items="@(new SelectList(kategori,"UpperCategoryId","CategoryName"))"></select>
                                <span asp-validation-for="UpperCategoryId" class="text-danger"></span>
                            </div>*@
                            <div class="form-group">
                                <label class="control-label">Kategori Kodu</label>
                                <input asp-for="CategoryCode" class="form-control" />
                                <span asp-validation-for="CategoryCode" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Alt Kategori Adı</label>
                                <input asp-for="CategoryName" class="form-control" />
                                <span asp-validation-for="CategoryName" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <input type="submit" value="Ekle" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </div>
                <!--/.col (left) -->
                <div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
